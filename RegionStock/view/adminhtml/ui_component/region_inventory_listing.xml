<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">region_inventory_listing.region_inventory_listing_data_source</item>
            <item name="deps" xsi:type="string">region_inventory_listing.region_inventory_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">region_inventory_columns</item>
    </argument>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <filters name="listing_filters" />
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <dataSource name="region_inventory_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">region_inventory_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">sku</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <columns name="region_inventory_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="storageConfig" xsi:type="array">
                    <item name="provider" xsi:type="string">region_inventory_listing.region_inventory_listing.listing_top.bookmarks</item>
                    <item name="namespace" xsi:type="string">current</item>
                </item>
                <item name="childDefaults" xsi:type="array">
                    <item name="controlVisibility" xsi:type="boolean">true</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">region_inventory_listing.region_inventory_listing.listing_top.bookmarks</item>
                        <item name="root" xsi:type="string">columns.${ $.index }</item>
                        <item name="namespace" xsi:type="string">current.${ $.storageConfig.root}</item>
                    </item>
                </item>
            </item>
        </argument>
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="sku" sortOrder="10">
            <settings>
                <filter>text</filter>
                <label translate="true">SKU</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="quantity" sortOrder="13">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Quantity</label>
                <dataType>number</dataType>
            </settings>
        </column>
        <column name="quantity_hanoi" sortOrder="16">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Quantity Hanoi</label>
                <dataType>number</dataType>
            </settings>
        </column>
        <column name="quantity_danang" sortOrder="19">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Quantity Danang</label>
                <dataType>number</dataType>
            </settings>
        </column>
        <column name="quantity_hcmc" sortOrder="22">
            <settings>
                <label translate="true">Quantity HCMC</label>
                <dataType>number</dataType>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="quantity_cantho" sortOrder="25">
            <settings>
                <label translate="true">Quantity Cantho</label>
                <dataType>number</dataType>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="is_salable" component="Magento_Ui/js/grid/columns/select" sortOrder="28">
            <settings>
                <options class="Magento\CatalogInventory\Model\Source\Stock" />
                <label translate="true">Is Salable (All)</label>
                <dataType>select</dataType>
                <filter>select</filter>
            </settings>
        </column>
    </columns>
</listing>
