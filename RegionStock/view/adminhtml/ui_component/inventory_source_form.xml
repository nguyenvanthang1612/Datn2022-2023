<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="address">
        <field name="country_id" formElement="select" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">VN</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <field name="region" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="region_id" component="Magento_Ui/js/form/element/abstract" formElement="input" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="city_id" component="Magenest_Directory/js/form/element/city" sortOrder="15" formElement="select" >
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">City</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <filterBy>
                            <field>country_id</field>
                            <target>${ $.provider }:${ $.parentScope }.country_id</target>
                        </filterBy>
                        <customEntry>city</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\City\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="district_id" component="Magenest_Directory/js/form/element/district" sortOrder="20" formElement="select" >
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">District</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <filterBy>
                            <field>city_id</field>
                            <target>${ $.provider }:${ $.parentScope }.city_id</target>
                        </filterBy>
                        <customEntry>district</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\District\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="ward_id" component="Magenest_Directory/js/form/element/ward" sortOrder="25" formElement="select" >
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Ward</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <filterBy>
                            <field>district_id</field>
                            <target>${ $.provider }:${ $.parentScope }.district_id</target>
                        </filterBy>
                        <customEntry>district</customEntry>
                        <options class="Magenest\Directory\Model\ResourceModel\Ward\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
