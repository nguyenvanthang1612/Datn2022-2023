<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magenest\GiaoHangNhanh\Api\GiaoHangNhanhInterface"
                type="Magenest\GiaoHangNhanh\Model\Carrier\GiaoHangNhanh" />
    <type name="Magenest\GiaoHangNhanh\Helper\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">GHN</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Magenest\GiaoHangNhanh\Helper\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magenest\GiaoHangNhanh\Controller\Webhook\Hook">
        <arguments>
            <argument name="logger" xsi:type="object">Magenest\GiaoHangNhanh\Helper\Logger\Logger</argument>
        </arguments>
    </type>
    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid" type="Magento\Sales\Model\ResourceModel\Grid">
        <arguments>
            <argument name="columns" xsi:type="array">
                <item name="ghn_order_code_attribute" xsi:type="string">sales_order.ghn_order_code_attribute</item>
            </argument>
        </arguments>
    </virtualType>
</config>
